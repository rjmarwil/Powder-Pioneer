<!DOCTYPE html>
<html>
<head>
  <title>Powder Pioneer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'skiing_fav.png' %>
</head>
<body class="bg", id="top">
  <nav class="navbar navbar-fixed-top">
    <div class="container">

      <div class="navbar-header">
        <div class="col-md-6">
          <a href="/"><%= image_tag('Pioneer_powder_Logo.png', class: 'img-responsive') %></a>
        </div>
      </div>

      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to current_user.email, "#" %></li>
          <li><%= link_to 'Logout', logout_path %></li>
        <% else %>
          <li><%= link_to "Login", '#', 'data-toggle': "modal", 'data-target': ".bs-example-modal-lg" %></li>
        <% end %>

        <li><%= link_to "About", root_path %></li>
        <li><%= link_to "FAQ", root_path %></li>
      </ul>

    </div>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= yield %>
      </div>
    </div>
  </div>

  <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body image-radius">
          <div class="row">
            <div class="col-md-6 split-panel-left">
              <%= render template: "registrations/new.html.erb" %>
            </div>
            <div class="col-md-6 split-panel-right">
              <%= render template: "sessions/new.html.erb" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
