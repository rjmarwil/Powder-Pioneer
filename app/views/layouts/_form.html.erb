<div class="form-horizontal" id="Register">
  <h3 class="col-sm-offset-1">Register</h3>
  <%= form_tag '/register' do %>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= label_tag :email %>
    </div>
    <div class="col-sm-5">
      <%= email_field_tag :email %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= label_tag :password %>
    </div>
    <div class="col-sm-5">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Register', class: 'btn btn-primary' %>
    </div>
  </div>

  <% end %>
</div>

<div class="form-horizontal" id="Login">
  <h3 class="col-sm-offset-1">Login</h3>
  <%= form_tag '/login' do %>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= label_tag :email %>
    </div>
    <div class="col-sm-5">
      <%= text_field_tag :email %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= label_tag :password %>
    </div>
    <div class="col-sm-5">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Login', class: 'btn btn-primary' %>
    </div>
  </div>

  <% end %>
</div>
